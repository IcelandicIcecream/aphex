{
	"name": "@aphexcms/studio",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --force",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:start": "docker compose up -d",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"generate:types": "aphex generate:types ./src/lib/schemaTypes/index.ts ./src/lib/generated-types.ts",
		"test": "vitest run",
		"test:verbose": "vitest run --reporter=verbose",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:local": "vitest run comprehensive-local-api",
		"test:http": "vitest run comprehensive-http-api",
		"test:graphql": "vitest run comprehensive-graphql-api",
		"test:all": "vitest run comprehensive",
		"test:coverage": "vitest run --coverage",
		"test:date": "tsx scripts/test-date-localapi.ts"
	},
	"dependencies": {
		"@aphexcms/cms-core": "workspace:*",
		"@aphexcms/graphql-plugin": "workspace:*",
		"@aphexcms/postgresql-adapter": "workspace:*",
		"@aphexcms/nodemailer-adapter": "workspace:*",
		"@aphexcms/resend-adapter": "workspace:*",
		"@aphexcms/storage-s3": "workspace:*",
		"@aphexcms/ui": "workspace:*",
		"better-auth": "^1.4.1",
		"drizzle-orm": "^0.44.7",
		"mode-watcher": "^1.1.0",
		"postgres": "^3.4.7",
		"sharp": "^0.34.5"
	},
	"devDependencies": {
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.554.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^22.0.0",
		"@vitest/ui": "^4.0.14",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.7",
		"graphql": "^16.12.0",
		"graphql-yoga": "^5.16.2",
		"mdsvex": "^0.12.6",
		"svelte": "^5.44.0",
		"svelte-check": "^4.3.4",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.20.6",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.4",
		"vitest": "^4.0.14"
	}
}
