{
	"name": "aphex-monorepo",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@9.0.0",
	"scripts": {
		"dev": "turbo dev --filter=!aphex-docs",
		"build": "turbo build",
		"preview": "pnpm -F @aphexcms/studio preview",
		"clean": "turbo clean && rm -rf apps/**/.svelte-kit apps/**/build apps/**/.vite packages/**/.svelte-kit packages/**/dist packages/**/.vite && find packages/cms-core/src -name '$types.d.ts' -type f -delete",
		"dev:clean": "pnpm clean && pnpm dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"check": "turbo check",
		"shadcn": "pnpm dlx shadcn-svelte@latest add $@ -c packages/ui",
		"test:package": "pnpm -F @aphexcms/cms-core build && pnpm -F @aphexcms/cms-core check",
		"dev:package": "pnpm -F @aphexcms/cms-core dev",
		"dev:studio": "pnpm -F @aphexcms/studio dev",
		"dev:docs": "pnpm -F aphex-docs dev",
		"build:docs": "pnpm -F aphex-docs build",
		"db:start": "pnpm -F @aphexcms/studio db:start",
		"db:push": "pnpm -F @aphexcms/studio db:push",
		"db:generate": "pnpm -F @aphexcms/studio db:generate",
		"db:migrate": "pnpm -F @aphexcms/studio db:migrate",
		"db:studio": "pnpm -F @aphexcms/studio db:studio"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.22.0",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"turbo": "^2.3.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": []
	},
	"dependencies": {
		"yaml": "^2.4.2"
	}
}
