{
	"name": "@aphexcms/cms-core",
	"version": "0.2.3",
	"description": "Aphex CMS Core - A Sanity-style CMS with ports and adapters architecture",
	"type": "module",
	"main": "./src/lib/index.js",
	"types": "./src/lib/index.d.ts",
	"svelte": "./src/lib/index.js",
	"bin": {
		"aphex": "./src/cli/index.ts"
	},
	"exports": {
		".": {
			"types": "./src/lib/index.d.ts",
			"svelte": "./src/lib/index.js",
			"default": "./src/lib/index.js"
		},
		"./server": {
			"types": "./src/lib/server/index.d.ts",
			"default": "./src/lib/server/index.js"
		},
		"./client": {
			"types": "./src/lib/client/index.d.ts",
			"default": "./src/lib/client/index.js"
		},
		"./schema": {
			"types": "./src/lib/schema/index.d.ts",
			"default": "./src/lib/schema/index.js"
		},
		"./routes/*": {
			"types": "./src/lib/routes/*.d.ts",
			"default": "./src/lib/routes/*.js"
		},
		"./*": {
			"types": "./src/lib/*.d.ts",
			"default": "./src/lib/*.js"
		}
	},
	"files": [
		"src/lib",
		"src/cli"
	],
	"scripts": {
		"build": "svelte-package && tsc && node ../../scripts/fix-imports.js ./dist",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"package": "pnpm build && pnpm pack",
		"dev:local": "node ../../scripts/swap-package-paths.js ./package.json src lib",
		"prepack": "node ../../scripts/swap-package-paths.js ./package.json dist lib && pnpm build",
		"postpack": "node ../../scripts/swap-package-paths.js ./package.json src lib"
	},
	"keywords": [
		"cms",
		"svelte",
		"sveltekit",
		"content-management",
		"sanity-style",
		"typescript",
		"aphex"
	],
	"author": "Benjamin Sinidol",
	"license": "MIT",
	"peerDependencies": {
		"@aphexcms/ui": "workspace:*",
		"@lucide/svelte": "^0.554.0",
		"@sveltejs/kit": "^2.49.0",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"graphql": "^16.12.0",
		"graphql-yoga": "^5.16.2",
		"@envelop/graphql-jit": "^11.0.0",
		"@graphql-yoga/render-graphiql": "^5.16.2",
		"mode-watcher": "^1.1.0",
		"svelte": "^5.44.0",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2"
	},
	"peerDependenciesMeta": {
		"graphql": { "optional": true },
		"graphql-yoga": { "optional": true },
		"@envelop/graphql-jit": { "optional": true },
		"@graphql-yoga/render-graphiql": { "optional": true }
	},
	"dependencies": {
		"svelte-sonner": "^1.0.7",
		"@clack/prompts": "^0.11.0",
		"cac": "^6.7.14",
		"dayjs": "^1.11.19",
		"esbuild": "^0.27.0",
		"picocolors": "^1.1.1",
		"s3mini": "^0.7.0",
		"sharp": "^0.34.5",
		"tsx": "^4.20.6"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.1",
		"@internationalized/date": "^3.10.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/package": "^2.5.6",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^22.0.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.44.0",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.0",
		"vite": "^7.2.4"
	}
}
