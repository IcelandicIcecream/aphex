{
	"name": "@aphexcms/cms-core",
	"version": "0.1.13",
	"description": "Aphex CMS Core - A Sanity-style CMS with ports and adapters architecture",
	"type": "module",
	"main": "./src/lib/index.js",
	"types": "./src/lib/index.d.ts",
	"svelte": "./src/lib/index.js",
	"bin": {
		"aphex": "./src/cli/index.js"
	},
	"exports": {
		".": {
			"types": "./src/lib/index.d.ts",
			"svelte": "./src/lib/index.js",
			"default": "./src/lib/index.js"
		},
		"./server": {
			"types": "./src/lib/server/index.d.ts",
			"default": "./src/lib/server/index.js"
		},
		"./client": {
			"types": "./src/lib/client/index.d.ts",
			"default": "./src/lib/client/index.js"
		},
		"./routes/*": {
			"types": "./src/lib/routes/*.d.ts",
			"default": "./src/lib/routes/*.js"
		},
		"./*": {
			"types": "./src/lib/*.d.ts",
			"default": "./src/lib/*.js"
		}
	},
	"files": [
		"src/lib",
		"src/cli"
	],
	"scripts": {
		"build": "svelte-package && tsc src/cli/*.ts --outDir dist --module esnext --target esnext --moduleResolution bundler --skipLibCheck && node ../../scripts/fix-imports.js ./dist",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"package": "pnpm build && pnpm pack",
		"dev:local": "node ../../scripts/swap-package-paths.js ./package.json src lib",
		"prepack": "node ../../scripts/swap-package-paths.js ./package.json dist lib && pnpm build",
		"postpack": "node ../../scripts/swap-package-paths.js ./package.json src lib"
	},
	"keywords": [
		"cms",
		"svelte",
		"sveltekit",
		"content-management",
		"sanity-style",
		"typescript",
		"aphex"
	],
	"author": "Benjamin Sinidol",
	"license": "MIT",
	"peerDependencies": {
		"@aphexcms/ui": "workspace:*",
		"@lucide/svelte": "^0.544.0",
		"@sveltejs/kit": "^2.22.0",
		"bits-ui": "^2.11.1",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.544.0",
		"mode-watcher": "^1.1.0",
		"svelte": "^5.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"cac": "^6.7.14",
		"esbuild": "^0.24.0",
		"picocolors": "^1.1.1",
		"s3mini": "^0.5.0",
		"sharp": "^0.34.4"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.22.0",
		"@internationalized/date": "^3.9.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4"
	}
}
