{
	"name": "@aphexcms/graphql-plugin",
	"version": "0.1.4",
	"description": "GraphQL plugin for Aphex CMS",
	"type": "module",
	"main": "./src/index.js",
	"types": "./src/index.d.ts",
	"exports": {
		".": {
			"types": "./src/index.d.ts",
			"import": "./src/index.js",
			"default": "./src/index.js"
		},
		"./schema": {
			"types": "./src/schema.d.ts",
			"import": "./src/schema.js",
			"default": "./src/schema.js"
		},
		"./resolvers": {
			"types": "./src/resolvers.d.ts",
			"import": "./src/resolvers.js",
			"default": "./src/resolvers.js"
		}
	},
	"files": [
		"src"
	],
	"scripts": {
		"build": "tsc && node ../../scripts/fix-imports.js ./dist",
		"dev": "tsc --outDir ./src --declaration --declarationMap && node ../../scripts/fix-imports.js ./src",
		"dev:local": "node ../../scripts/swap-package-paths.js ./package.json src",
		"prepack": "node ../../scripts/swap-package-paths.js ./package.json dist && pnpm build",
		"postpack": "node ../../scripts/swap-package-paths.js ./package.json src"
	},
	"dependencies": {
		"@envelop/graphql-jit": "^10.0.0",
		"@graphql-yoga/render-graphiql": "^5.16.0",
		"graphql": "^16.11.0",
		"graphql-yoga": "^5.16.0"
	},
	"peerDependencies": {
		"@aphexcms/cms-core": "workspace:*",
		"@sveltejs/kit": "^2.22.0"
	},
	"devDependencies": {
		"@aphexcms/cms-core": "workspace:*",
		"@sveltejs/kit": "^2.22.0",
		"typescript": "^5.3.3"
	}
}
