{
	"name": "@aphex/postgresql-adapter",
	"version": "0.1.0",
	"description": "PostgreSQL database adapter for Aphex CMS using Drizzle ORM",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./schema": {
			"types": "./src/schema.ts",
			"import": "./src/schema.ts",
			"default": "./src/schema.ts"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "tsc"
	},
	"dependencies": {
		"drizzle-orm": "^0.40.0",
		"postgres": "^3.4.5"
	},
	"peerDependencies": {
		"@aphex/cms-core": "workspace:*"
	},
	"devDependencies": {
		"@aphex/cms-core": "workspace:*",
		"tsup": "^8.0.0",
		"typescript": "^5.3.3"
	}
}
