{
	"name": "@aphexcms/postgresql-adapter",
	"version": "0.1.7",
	"description": "PostgreSQL database adapter for Aphex CMS using Drizzle ORM",
	"type": "module",
	"main": "./src/index.js",
	"types": "./src/index.d.ts",
	"exports": {
		".": {
			"types": "./src/index.d.ts",
			"import": "./src/index.js",
			"default": "./src/index.js"
		},
		"./schema": {
			"types": "./src/schema.d.ts",
			"import": "./src/schema.js",
			"default": "./src/schema.js"
		}
	},
	"files": [
		"src"
	],
	"scripts": {
		"build": "tsc && node ../../scripts/fix-imports.js ./dist",
		"dev": "tsc --outDir ./src --declaration --declarationMap",
		"dev:local": "node ../../scripts/swap-package-paths.js ./package.json src",
		"prepack": "node ../../scripts/swap-package-paths.js ./package.json dist && pnpm build",
		"postpack": "node ../../scripts/swap-package-paths.js ./package.json src"
	},
	"dependencies": {
		"drizzle-orm": "^0.44.7",
		"postgres": "^3.4.7"
	},
	"peerDependencies": {
		"@aphexcms/cms-core": "workspace:*"
	},
	"devDependencies": {
		"@aphexcms/cms-core": "workspace:*",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"compilerOptions": {
		"resolveJsonModule": true
	}
}
