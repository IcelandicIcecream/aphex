{
	"name": "@aphexcms/storage-s3",
	"version": "0.1.1",
	"description": "S3-compatible storage adapter for Aphex CMS (AWS S3, Cloudflare R2, MinIO, etc.)",
	"type": "module",
	"main": "./src/index.js",
	"types": "./src/index.d.ts",
	"exports": {
		".": {
			"types": "./src/index.d.ts",
			"import": "./src/index.js",
			"default": "./src/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"dev:local": "node ../../scripts/swap-package-paths.js ./package.json src",
		"prepack": "node ../../scripts/swap-package-paths.js ./package.json dist && pnpm build",
		"postpack": "node ../../scripts/swap-package-paths.js ./package.json src"
	},
	"dependencies": {
		"s3mini": "^0.5.0"
	},
	"peerDependencies": {
		"@aphexcms/cms-core": "workspace:*"
	},
	"devDependencies": {
		"@aphexcms/cms-core": "workspace:*",
		"tsup": "^8.0.0",
		"typescript": "^5.3.3"
	}
}
